<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample14"
    tools:context=".firstpage.login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/customlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="listview" />

            <Button
                android:id="@+id/girdview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff1719"
                android:onClick="girdViewon"
                android:text="Grid view"
                android:textAllCaps="true"
                android:textColor="#0cff80"
                android:textStyle="bold" />

            <Button
                android:id="@+id/expandable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:focusable="true"
                android:onClick="clickheretoexpanda"
                android:text="expandable view "
                android:textAllCaps="true"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/Recycler__view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#909090"
                android:text="Recyclerview(baisc)" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Secondrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstRow"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/Recyclerviewadv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#aaaaaa"
                android:text="Girdrecviewwithserverurl" />

            <Button
                android:id="@+id/basicanimation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:text="basicanimation" />


            <Button
                android:id="@+id/sqlite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sqlite" />

            <Button
                android:id="@+id/tranistion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Listveiw"
                tools:text="TRANISTION" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Thirdrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Secondrow"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/advsql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview"
                tools:text="advsql" />

            <Button
                android:id="@+id/a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listveiw" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Fourth_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Thirdrow"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/a9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listveiw" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Fithrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fourth_row"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/a13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listveiw" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fithrow"
            android:layout_margin="16sp"
            android:background="#8342f4">

            <Button
                android:id="@+id/a17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listview" />

            <Button
                android:id="@+id/a20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listveiw" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>