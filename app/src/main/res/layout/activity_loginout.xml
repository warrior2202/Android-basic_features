<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstpage.loginout"
    android:background="@drawable/sample10">


    <TextView
        android:id="@+id/hintTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="your email is this :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hintTxt"
        android:text="sample email id "
        android:textStyle="bold" />


    <Button
        android:id="@+id/logOutbtn"
        android:layout_width="137dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/hintTxt"
        android:onClick="backMain"
        android:text="LOGOUT" />

    <Button
        android:id="@+id/Contbtn"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/hintTxt"
        android:onClick="loginacty"
        android:text="click here to condt" />


</RelativeLayout>